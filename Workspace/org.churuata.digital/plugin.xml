<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="mapFilter"
         point="org.eclipse.equinox.http.registry.filters">
      <filter
            alias="/"
            class="org.churuata.digital.http.MapFilter"
            load-on-startup="true">
      </filter>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/churuata"
            class="org.churuata.digital.http.ChuruataServlet"
            load-on-startup="true">
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/churuata/active"
            class="org.churuata.digital.http.ActiveServlet"
            load-on-startup="true">
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/churuata/profile"
            class="org.churuata.digital.http.ProfileServlet"
            load-on-startup="true">
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/churuata/register"
            class="org.churuata.digital.http.RegisterServlet"
            load-on-startup="true">
      </servlet>
   </extension>
  <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/churuata/web"
            base-name="/WEB-INF">
      </resource>
   </extension>
 </plugin>
